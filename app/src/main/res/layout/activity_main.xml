<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_atvt_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_one">
    <!--主页面-->
    <RelativeLayout
        android:id="@+id/rl_atvt_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_23">



        <!--下层-标题栏    克里姆林宫-->
        <LinearLayout
            android:id="@+id/ll_atvt_main_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/main_left_top_page" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="克里姆林宫"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/main_right_top_qr_code" />
        </LinearLayout>
        <!--下层-图片栏-->
        <LinearLayout
            android:id="@+id/ll_atvt_main_iv"
            android:background="@drawable/main_bg"
            android:layout_marginTop="@dimen/dp_45"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="235dp">

            <RelativeLayout
                android:id="@+id/rl_atvt_main_untreated_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_atvt_main_liu"
                    android:src="@drawable/main_untreated_order_bg_one"
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_220"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_220"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0">
                        <TextView
                            android:textColor="@color/white"
                            android:text="8"
                            android:layout_marginRight="@dimen/dp_5"
                            android:textSize="@dimen/dp_40"
                            android:gravity="right|bottom"
                            android:layout_weight="0.55"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textColor="@color/white"
                            android:text="个"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:gravity="left|bottom"
                            android:layout_weight="0.45"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <TextView
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center|top"
                        android:text="未处理订单"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <!--下层-空白 -->
        <LinearLayout
            android:id="@+id/ll_atvt_main_black"
            android:layout_marginTop="370dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2000"
            android:background="#ffaaff"
            android:orientation="vertical">

        </LinearLayout>

        <!--上层    -->
        <LinearLayout
            android:id="@+id/ll_atvt_main_superstratum"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_330"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2000">

        </LinearLayout>




    </RelativeLayout>

    <!--侧滑页面-->
    <ScrollView
        android:layout_width="@dimen/dp_300"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/dl_bg"
        android:choiceMode="singleChoice">

        <LinearLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="vertical">
            <!--用户信息栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:layout_margin="@dimen/dp_15"
                android:orientation="horizontal">

                <com.jdlx.shopmanager.customerview.RoundnessImageView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_gravity="center"
                    android:src="@drawable/shilipic" />

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="0.5"
                        android:gravity="center|left"
                        android:text="用户名"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_20" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_weight="0.5"
                        android:gravity="center|left"
                        android:text="等级"
                        android:textColor="@color/dl_tv_two" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="工作中"
                    android:textColor="@color/dl_tv_one" />

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/dl_ll_bg" />
            <!--店铺选择栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_margin="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="克里木临工"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_18" />

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="切换"
                    android:textColor="@color/dl_tv_one" />

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chevron_right_black_24dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/dl_ll_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@color/dl_v_bg" />
            <!--店铺信息栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_182"
                android:background="@color/dl_ll_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="8685.0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_18" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="营业额"
                            android:textColor="@color/dl_tv_one" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="28"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_18" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="/"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_18" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="20"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_18" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="单量/客量"
                            android:textColor="@color/dl_tv_one" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_18" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="新增会员"
                            android:textColor="@color/dl_tv_one" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/dl_v_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="业绩分析"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chevron_right_black_24dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/dl_v_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="客单明细"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chevron_right_black_24dp" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />
            <!--设置，客服-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_101"
                android:background="@color/dl_ll_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="偏好设置"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chevron_right_black_24dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/dl_v_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="客服咨询"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chevron_right_black_24dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@color/dl_v_bg" />
            <!--密码修改，退出登录-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_101"
                android:background="@color/dl_ll_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="修改密码"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chevron_right_black_24dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/dl_v_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="退出登录"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chevron_right_black_24dp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="0.1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</android.support.v4.widget.DrawerLayout>